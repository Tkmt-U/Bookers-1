<body>
  <h2 class="headtext">Editing Book</h2>

  <div class="show-box">
    <% if @book.errors.any? %>
      <div>
        <ul>
          <p>error prohibited this book from being saved:</p>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model:@book, local:true do |f| %>
      <div class="contents-space">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="contents-space">
        <h4>Body</h4>
        <%= f.text_field :body %>
        <%= f.submit 'Update Book' %>
      </div>
    <% end %>

    <div class="link-box">
      <%= link_to "Show", book_path %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</body>